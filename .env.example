# Database Configuration
DATABASE_URL=sqlite:///./instagram_clone.db

# JWT Authentication
# IMPORTANT: Generate secure keys with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_USE_openssl_rand_hex_32
REFRESH_SECRET_KEY=CHANGE_THIS_USE_openssl_rand_hex_32_DIFFERENT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Security
DEBUG=False

# Celery / Background Jobs
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Settings
MAX_FILE_SIZE=5242880

# Stories Configuration
STORY_EXPIRY_HOURS=24

# Application Settings
APP_NAME=Instagram Clone
